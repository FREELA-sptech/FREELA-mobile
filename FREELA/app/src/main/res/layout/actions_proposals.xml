<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Seu conteÃºdo principal acima do LinearLayout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="150dp"
        android:background="@drawable/dialog_background"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_close_24"/>

        <RelativeLayout
            android:id="@+id/details"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageDetails"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/details"
                app:tint="@color/textprimary" />

            <TextView
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/imageDetails"
                android:text="Detalhes" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editar"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageEditar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_edit_24"
                app:tint="@color/textprimary" />

            <TextView
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/imageEditar"
                android:text="Editar" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delete"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageExcluir"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_remove_circle_outline_24"
                app:tint="@color/textprimary" />

            <TextView
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/imageExcluir"
                android:text="Excluir" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
