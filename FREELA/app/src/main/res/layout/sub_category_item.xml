<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textSubCategoryName"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/checkBoxSubCategory"
        android:text="SubCategoria"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSubCategoryName"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/checkBoxSubCategory"
        android:gravity="center_vertical"
        android:text="Categoria"
        android:textColor="@color/textsecondary"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/checkBoxSubCategory"
        android:layout_width="50dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>